<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.Todo" parent="Theme.AppCompat.DayNight.NoActionBar" />

    <style name="Theme.Todo.TransparentSystemBar">
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
    </style>

    <style name="Theme.Todo.Starting" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">#FFFFFF</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/svg_splash_app_logo</item>
        <item name="postSplashScreenTheme">@style/Theme.Todo</item>
    </style>
</resources>